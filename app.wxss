/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

view {
    box-sizing: border-box;
}

.hr {
    height: 1px;
    background: #dedede;
}

.gap {
    background: #f5f5f5;
}

/* 横向标题 颜色#f5f5f5*/

.title-row {
    box-sizing: border-box;
    width: 100%;
    padding: 0 4%;
    height: 70rpx;
    line-height: 70rpx;
    background: #f5f5f5;
    font-size: 28rpx;
    color: #666;
}

.title-row .right {
    float: right;
    display: flex;
}

.title-row .right text {
    font-size: 28rpx;
    color: #999;
}

.title-row .right .icon {
    width: 16rpx;
    height: 28rpx;
    display: flex;
    margin: auto;
    margin-left: 10rpx;
}

.title-row .right .icon image {
    width: 100%;
    height: 100%;
    margin: auto;
}

/*文本内容  */

.content-row {
    box-sizing: border-box;
    width: 100%;
    padding: 20rpx 4%;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #333;
    background: #fff;
}

/*横向点击  白色*/

.click-row {
    width: 100%;
    padding: 0 3%;
    height: 80rpx;
    background: #fff;
}

.click-row text {
    font-size: 28rpx;
    color: #333;
    line-height: 80rpx;
}
.click-row .right {
    float: right;
    display: flex;
    height: 100%;
}
.click-row .right .icon {
    width: 16rpx;
    height: 28rpx;
    display: flex;
    margin: auto 0;
    margin-left: 10rpx;
}

.click-row .right .icon image {
    width: 100%;
    height: 100%;
    margin: auto;
}
