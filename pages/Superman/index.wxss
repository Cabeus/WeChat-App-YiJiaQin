/* pages/Superman/index.wxss */

.top-img {
  width: 100%;
  height: 300rpx;
}

.top-img image {
  width: 100%;
  height: 100%;
}

.screen-box {
  height: 80rpx;
  padding: 0 3%;
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
}

.screen-left {
  width: 22%;
  height: 100%;
}

.screen-left picker {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

.screen-left picker .screen-left-text {
  text-align: center;
  width: 90rpx;
  float: left;
}

.screen-left picker image {
  width: 26rpx;
  height: 16rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  margin-bottom: 5rpx;
}
