/* pages/Superman/Group/detail/detail.wxss */
page{
    background: #f5f5f5;
}
.header {
    width: 100%;
    height: 86px;
    background: #e84651;
    display: flex;
    padding-left: 5%;
}

.header-touxiang {
    width: 112rpx;
    height: 112rpx;
    margin: auto 0;
    border-radius: 50%;
    border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.header-touxiang image {
    border-radius: 50%;
    width: 100%;
    height: 100%;
}

.header-cen {
    flex: 1;
    height: 112rpx;
    margin: auto 0;
    padding-left: 20rpx;
    padding-top: 10rpx;
}

.header-cen .top {
    font-size: 32rpx;
    color: #fff;
    line-height: 45rpx;
    padding-bottom: 5rpx;
}

.header-cen .bot {
    font-size: 24rpx;
    color: #fff;
    line-height: 32rpx;
}

.header-QR {
    width: 81rpx;
}

.member-box {
    width: 100%;
    display: flex;
    padding: 30rpx;
    flex-wrap:wrap;
    background: #fff;
}

.member {
    width: 25%;
    padding: 10rpx 0;
}

.member .image {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
}

.member .name {
    text-align: center;
    font-size: 26rpx;
    color: #333;
    padding-top: 5rpx;
}

.member .image image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.add-box {
    height: 98rpx;
    width: 100%;
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1rpx solid rgba(0, 0, 0, 0.10);
    display: flex;
}

.add {
    width: 90%;
    margin: auto;
    background: #e84651;
    border-radius: 4px;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #fff;
}
