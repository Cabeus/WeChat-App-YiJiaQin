/* pages/Superman/Group/group.wxss */

.header {
    width: 100%;
    height: 86px;
    background: #e84651;
    display: flex;
    padding-left: 5%;
}

.header-touxiang {
    width: 112rpx;
    height: 112rpx;
    margin: auto 0;
    border-radius: 50%;
    border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.header-touxiang image {
    border-radius: 50%;
    width: 100%;
    height: 100%;
}

.header-cen {
    flex: 1;
    height: 112rpx;
    margin: auto 0;
    padding-left: 20rpx;
    padding-top: 10rpx;
}

.header-cen .top {
    font-size: 32rpx;
    color: #fff;
    line-height: 45rpx;
    padding-bottom: 5rpx;
}

.header-cen .top text {
    float: left;
}

.header-cen .bot {
    font-size: 24rpx;
    color: #fff;
    line-height: 32rpx;
}

.header-QR {
    width: 81rpx;
}

.icon-right {
    width: 15rpx;
    height: 28rpx;
    margin-left: 20rpx;
    display: inline-block;
}

.icon-right image {
    width: 100%;
    height: 100%;
}

.nav-box {
    height: 80rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.10);
}
.nav-box.nav-top{
    width: 100%;
    position: fixed;
    top: 0;
    background: #fff;
}


.nav {
    display: flex;
    width: 60%;
    height: 100%;
    margin: 0 auto;
}

.nav-cen {
    flex: 1;
    font-size: 30rpx;
    color: #666;
    margin: auto 0;
    text-align: center;
    position: relative;
}

.nav-cen .active {
    position: absolute;
    width: 45rpx;
    height: 6rpx;
    background: #e84651;
    border-radius: 100px;
    left: calc(50% - 22rpx);
    bottom: -10rpx;
}

/*帖子  */

.post-page .sticky {
    height: 80rpx;
    display: flex;
    padding-left: 2.7%;
}

.post-page .sticky .sticky-icon {
    width: 68rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    border: 1px solid #e84651;
    border-radius: 4px;
    margin: auto 0;
    font-size: 24rpx;
    color: #e84651;
}

.post-page .sticky text {
    font-size: 28rpx;
    color: #333;
    margin: auto 0;
    margin-left: 10rpx;
}

.post-page .list-con {
    padding: 4% 4% 1% 4%;
}

.post-page .list-con .list-con-top {
    display: flex;
}

.post-page .list-con .list-con-top .Head-icon {
    width: 84rpx;
    height: 84rpx;
}

.post-page .list-con .list-con-top .Head-icon image {
    border-radius: 50%;
    width: 100%;
    height: 100%;
}

.post-page .list-con .list-con-top .top-cen {
    padding: 5rpx 0 0 20rpx;
}

.post-page .list-con .list-con-top .top-cen .top {
    font-size: 30rpx;
    color: #333;
}

.post-page .list-con .list-con-top .top-cen .bot {
    font-size: 24rpx;
    color: #999;
}

.post-page .list-con .list-con-cen .text {
    font-size: 28rpx;
    color: #333;
    line-height: 38rpx;
    padding: 10rpx 0;
}

.post-page .list-con .list-con-cen .image-box {
    display: flex;
}

.post-page .list-con .list-con-cen .image-box .image {
    flex: 1;
    padding: 5rpx;
}

.post-page .list-con .list-con-cen .image-box .image image {
    width: 100%;
}

.post-page .list-con-bot {
    height: 70rpx;
    display: flex;
    flex-direction: row-reverse;
}

.post-page .list-con-bot .block {
    height: 100%;
    margin-left: 10rpx;
    margin-right: 10rpx;
    display: flex;
}

.post-page .list-con-bot .block image {
    width: 100%;
    height: 100%;
}

.post-page .list-con-bot .block text {
    font-size: 24rpx;
    color: #666;
    margin: auto 5rpx;
    display: block;
}

.post-page .list-con-bot .block .icon-see {
    width: 34rpx;
    height: 23rpx;
    display: flex;
    margin: auto 0;
}

.post-page .list-con-bot .block .icon-comment {
    width: 28rpx;
    height: 27rpx;
    display: flex;
    margin: auto 0;
}

.post-page .list-con-bot .block .icon-zambia {
    width: 28rpx;
    height: 28rpx;
    display: flex;
    margin: auto 0;
}

.add-box {
    height: 98rpx;
    width: 100%;
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1rpx solid rgba(0, 0, 0, 0.10);
    display: flex;
}

.add {
    width: 90%;
    margin: auto;
    background: #e84651;
    border-radius: 4px;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #fff;
}
