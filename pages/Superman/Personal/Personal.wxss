/* pages/Superman/Personal/Personal.wxss */

.header {
    width: 100%;
    height: 262rpx;
    background: #e84651;
}

.header .header-img {
    width: 152rpx;
    height: 152rpx;
    margin: 0 auto;
    border: 1rpx solid rgba(255, 255, 255,0.3 );
    border-radius: 50%;
    display: flex;
}

.header .header-img image {
    width: 90%;
    height: 90%;
    border-radius: 50%;
    margin: auto;
}
.header .header-name{
    margin-top: 25rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
}
.header .header-name text{
    width: 108rpx;
    height: 34rpx;
    display: inline-block;
    font-size: 22rpx;
    background: #C8121E;
    border-radius: 100rpx;
    margin-left: 20rpx;
}
